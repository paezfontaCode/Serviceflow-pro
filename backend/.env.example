# ============================================
# Serviceflow Pro - Environment Configuration
# ============================================

# ----------------
# Environment
# ----------------
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ----------------
# Database
# ----------------
DATABASE_URL=postgresql://serviceflow:serviceflow_pass@localhost:5432/serviceflow_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ----------------
# Security - CRITICAL
# ----------------
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ----------------
# CORS Configuration
# ----------------
# Comma-separated list of allowed origins
# Development: http://localhost:5173,http://localhost:3000
# Production: https://your-domain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ----------------
# Rate Limiting
# ----------------
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT=5/minute

# ----------------
# Logging
# ----------------
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------
# Project Info
# ----------------
PROJECT_NAME="Serviceflow Pro ERP"
API_V1_STR="/api/v1"

# ----------------
# External Services (Optional)
# ----------------
# REDIS_URL=redis://localhost:6379/0
# SENTRY_DSN=your-sentry-dsn
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
