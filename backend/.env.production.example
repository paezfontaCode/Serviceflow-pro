# Serviceflow Pro - Production Environment Configuration
# CRITICAL: Change all default values in an actual production environment

# Application Settings
PROJECT_NAME="Serviceflow Pro ERP"
API_V1_STR="/api/v1"
ENVIRONMENT="production"
DEBUG=false
LOG_LEVEL="INFO"

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="replace-this-with-a-very-long-and-secure-random-string-at-least-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080 # 7 days

# CORS - CRITICAL: Restrict this to your actual frontend domains
ALLOWED_ORIGINS="https://app.yourdomain.com,https://api.yourdomain.com"

# Database - use managed database service (e.g., RDS, Cloud SQL)
# DATABASE_URL="postgresql://user:password@hostname:5432/dbname"
DATABASE_URL="postgresql://postgres:postgres@db:5432/serviceflow"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis - use managed Redis service (e.g., ElastiCache, MemoryStore)
# REDIS_URL="redis://hostname:6379/0"
REDIS_URL="redis://redis:6379/0"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
LOGIN_RATE_LIMIT="10/minute"

# Error Monitoring
SENTRY_DSN=""

# Email Service
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="info@yourdomain.com"
EMAILS_FROM_NAME="Serviceflow Pro"
