# Serviceflow Pro - Staging Environment Configuration
# Used for testing features before production

# Application Settings
PROJECT_NAME="Serviceflow Pro ERP (Staging)"
API_V1_STR="/api/v1"
ENVIRONMENT="staging"
DEBUG=true
LOG_LEVEL="DEBUG"

# Security
SECRET_KEY="staging-secret-key-for-internal-testing-only-replace-later"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
ALLOWED_ORIGINS="http://localhost:5173,http://staging.yourdomain.com"

# Database
DATABASE_URL="postgresql://postgres:postgres@db:5432/serviceflow_staging"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5

# Redis
REDIS_URL="redis://redis:6379/1"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=200
LOGIN_RATE_LIMIT="20/minute"

# Error Monitoring
SENTRY_DSN=""

# Email Service (usually uses a test provider like Mailtrap)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.mailtrap.io"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="staging@yourdomain.com"
