# ServiceFlow Pro - Environment Configuration Template
# Copy this file to .env and update the values

# Environment Type (development/production)
ENVIRONMENT=development

# Database Configuration
POSTGRES_USER=serviceflow
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=serviceflow

# Backend Security
# Generate a secure key with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_SECRET_KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Configuration
# For development: allow localhost and common dev ports
# For production: replace with your actual domain(s)
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173,http://127.0.0.1

# Project Info
PROJECT_NAME=Serviceflow Pro ERP
API_V1_STR=/api/v1

# Database URL (constructed from above variables)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
