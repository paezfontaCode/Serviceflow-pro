# Serviceflow Pro - Production Environment Variables Template
# Copy this file to .env and fill in the values

# --- Application Settings ---
PROJECT_NAME="Serviceflow Pro ERP"
ENVIRONMENT=production
DEBUG=False
API_V1_STR=/api/v1

# --- Security ---
# CRITICAL: Generate a strong key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_very_secure_random_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080 # 7 days

# --- CORS ---
# Comma-separated list of allowed domains
ALLOWED_ORIGINS=https://app.yourdomain.com,https://api.yourdomain.com

# --- Database ---
# Local Docker components
POSTGRES_USER=serviceflow_admin
POSTGRES_PASSWORD=generate_a_strong_password
POSTGRES_DB=serviceflow_prod

# Full URL format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT=5/minute

# --- Logging ---
LOG_LEVEL=INFO

# --- Sentry (Optional Error Monitoring) ---
# SENTRY_DSN=https://your_sentry_dsn_here

# --- Email (SMTP) ---
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAILS_FROM_EMAIL=no-reply@yourdomain.com
EMAILS_FROM_NAME="Serviceflow Pro"
